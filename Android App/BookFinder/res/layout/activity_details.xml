<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#222"
    tools:context=".DetailsActivity" >

    <TextView
        android:id="@+id/details_Condition_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dip"
        android:text="@string/condition"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/details_Condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/details_Condition_Label"
        android:layout_marginBottom="5dip"
        android:textColor="#fff"
        android:text="" />

    <TextView
        android:id="@+id/details_Edition_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/details_Condition"
        android:layout_below="@+id/details_Condition"
        android:layout_marginBottom="5dip"
        android:text="@string/edition"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/details_Edition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/details_Edition_Label"
        android:layout_alignRight="@+id/details_Condition"
        android:layout_below="@+id/details_Edition_Label"
        android:layout_marginBottom="5dip"
        android:background="@drawable/rounded_border"
        android:textColor="#fff"
        android:text="" />

    <TextView
        android:id="@+id/details_Email_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/details_Edition"
        android:layout_below="@+id/details_Edition"
        android:layout_marginBottom="5dip"
        android:text="@string/email"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/details_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/details_Email_Label"
        android:layout_alignRight="@+id/details_Edition"
        android:layout_below="@+id/details_Email_Label"
        android:background="@drawable/rounded_border"
        android:textColor="#fff" />

    <Button
        android:id="@+id/button_OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="OK" />

</RelativeLayout>
